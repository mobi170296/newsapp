@model NewsApplication.Models.Category

@{
    ViewBag.Title = "Thêm danh mục tin";
}

<div class="card">
    <div class="card-header">
        <div class="alert alert-info">Chỉnh sửa thông tin danh mục <b>@ViewBag.oldname</b></div>
    </div>
    <div class="card-body">
        @if(ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        @if (ViewBag.ErrorsMap != null)
        {
            <div class="alert alert-danger">
                @foreach (string key in ViewBag.ErrorsMap.Keys)
                {
                    <div>@ViewBag.ErrorsMap[key]</div>
                }
            </div>
        }
        <form action="" method="post">
            <div class="form-group">
                <label>Tên mục</label>
                <input class="form-control" type="text" name="name" value="@Model.name" />
            </div>
            <div class="form-group">
                <label>Địa chỉ liên kết</label>
                <input class="form-control" type="text" name="link" value="@Model.link" />
            </div>
            <button class="btn btn-outline-success">Lưu thay đổi</button>
            @Html.ActionLink("Trở về danh sách danh mục", "Index", "CategoryManage",new  { } , new { @class = "btn btn-link" })
        </form>
    </div>
</div>