@model NewsApplication.Models.Category

@{ 
    ViewBag.Title = "Thêm danh mục tin";
}

<div class="card">
    <div class="card-header">
        Thêm danh mục tin
    </div>
    <div class="card-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        @if (ViewBag.ErrorsMap != null)
        {
            <div class="alert alert-danger">
                @foreach(string key in ViewBag.ErrorsMap.Keys)
                {
                    <div>@ViewBag.ErrorsMap[key]</div>
                }
            </div>
        }
        <form action="" method="post">
            <div class="form-group">
                <label>Tên mục</label>
                <input class="form-control" type="text" name="name" value="@(Request.HttpMethod == "POST" ? Model.name : "")" />
            </div>
            <div class="form-group">
                <label>Địa chỉ liên kết</label>
                <input class="form-control" type="text" name="link" value="@(Request.HttpMethod == "POST" ? Model.link : "")" />
            </div>
            <button class="btn btn-outline-primary">Thêm danh mục tin</button>
            @Html.ActionLink("Trở về danh sách danh mục", "Index", "CategoryManage", new {@class="btn btn-link" })
        </form>
    </div>
</div>