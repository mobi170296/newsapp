@model NewsApplication.Models.User

@{ 
    ViewBag.Title = "Đăng ký tài khoản người dùng";
}

<div class="card">
    <div class="card-header">Đăng ký tài khoản</div>
        
    <div class="card-body">
        @if (ViewBag.ErrorMessage != null || ViewBag.ErrorsMap != null)
        {
            <div class="alert alert-danger">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div>@ViewBag.ErrorMessage</div>
                }
                @if (ViewBag.ErrorsMap != null)
                {
                    foreach (string key in ViewBag.ErrorsMap.Keys)
                    {
                        <div>
                            @ViewBag.ErrorsMap[key]
                        </div>
                    }
                }
            </div>
        }
        <form action="" method="post">
            <div class="form-group">
                <label>Tên tài khoản</label>
                <input class="form-control" type="text" name="username" placeholder="Tên tài khoản" value="@(Request.HttpMethod == "POST" ?  Model.username : "" )" />
            </div>
            <div class="form-group">
                <label>Mật khẩu</label>
                <input class="form-control" type="password" name="password" placeholder="Mật khẩu" value="" />
            </div>
            <div class="form-group">
                <label>Nhập lại mật khẩu</label>
                <input class="form-control" type="password" name="password" placeholder="Nhập lại mật khẩu" value="" />
            </div>
            <div class="form-group">
                <label>Họ lót</label>
                <input class="form-control" type="text" name="lastname" placeholder="Họ" value="@(Request.HttpMethod == "POST" ?  Model.lastname : "" )" />
            </div>
            <div class="form-group">
                <label>Tên</label>
                <input class="form-control" type="text" name="firstname" placeholder="Tên" value="@(Request.HttpMethod == "POST" ?  Model.firstname : "" )" />
            </div>
            <div class="form-group">
                <label>Giới tính</label>
                <div>
                    <label><input type="radio" name="gender" value="1" checked /> Nam</label> <label><input type="radio" name="gender" value="0" /> Nữ</label>
                </div>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" name="email" placeholder="Email" value="@(Request.HttpMethod == "POST" ?  Model.email : "" )" />
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <input class="form-control" type="text" name="phone" placeholder="Số điện thoại" value="@(Request.HttpMethod == "POST" ?  Model.phone : "" )" />
            </div>
            <button class="btn btn-primary" type="submit" name="register" value="register">Đăng ký tài khoản</button> <a href="/" class="btn btn-link">về trang chủ</a>
        </form>
    </div>
</div>